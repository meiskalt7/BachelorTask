<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet>
        <servlet-name>Pricelist</servlet-name>
        <servlet-class>org.meiskalt7.servlets.Pricelist</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.AdminPage</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ManagerPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.ManagerPage</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>mainPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.MainPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cartPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.ShoppingCartPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reservationPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.ReservationPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactsPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.ContactsPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>org.meiskalt7.servlets.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ordersPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.OrdersPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>reservationsPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.ReservationsPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>statisticPage</servlet-name>
        <servlet-class>org.meiskalt7.servlets.StatisticPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Pricelist</servlet-name>
        <url-pattern>/pricelist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerPage</servlet-name>
        <url-pattern>/workshift</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mainPage</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cartPage</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservationPage</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactsPage</servlet-name>
        <url-pattern>/contacts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ordersPage</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>reservationsPage</servlet-name>
        <url-pattern>/reservations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>statisticPage</servlet-name>
        <url-pattern>/statistics</url-pattern>
    </servlet-mapping>

    <resource-ref>
        <res-ref-name>
            jdbc/baka
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>
</web-app>
